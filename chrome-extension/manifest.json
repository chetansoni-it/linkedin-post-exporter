{
    "manifest_version": 3,
    "name": "LinkedIn Job Exporter",
    "version": "1.1",
    "author": "Chetan Soni",
    "homepage_url": "https://chetansoni-it.github.io/chetansoni-it/",
    "permissions": [
        "tabs",
        "downloads"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "config.js",
                "content.js"
            ]
        }
    ]
}