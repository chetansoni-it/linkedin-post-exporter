{
    "manifest_version": 3,
    "name": "LinkedIn Post Exporter (Safe)",
    "version": "1.0.0",
    "description": "Export visible LinkedIn search posts to CSV (manual & safe)",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}